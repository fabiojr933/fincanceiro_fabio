<!-- Pre-loader end -->
<div id="pcoded" class="pcoded">
    <div class="pcoded-overlay-box"></div>
    <div class="pcoded-container navbar-wrapper">
        <%- include('../includes/top') %>
        <div class="pcoded-main-container">
            <div class="pcoded-wrapper">

                <%- include('../includes/nav') %>


                <div class="pcoded-content">
                    <!-- Page-header start -->
                    <div class="page-header">
                        <div class="page-block">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <div class="page-header-title">
                                        <h5 class="m-b-10">√Årea Administrativa</h5>
                                        <p class="m-b-0">Seja bem vindo </p>
                                    </div>
                                </div>                               
                            </div>
                        </div>
                    </div>                   
                    <div class="pcoded-inner-content">
                        <div class="main-body">
                            <div class="page-wrapper">
                                  <div class="page-body">
                                    <div class="row">
                                        <div class="col-xl-3 col-md-6">
                                            <div class="card">
                                                <div class="card-block">
                                                    <div class="row align-items-center">
                                                        <div class="col-8">
                                                            <h5 class="text-c-blue">R$: <%= fatura[0].saldo %></h5>
                                                        </div>
                                                        <div class="col-4 text-right">
                                                            <i class="fa fa-hand-o-down f-28"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="card-footer bg-c-blue">
                                                    <div class="row align-items-center">
                                                        <div class="col-9">
                                                            <p class="text-white m-b-0"><%= fatura[0].banco %></p>
                                                        </div>
                                                        <div class="col-3 text-right">
                                                            <i class="fa fa-line-chart text-white f-16"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>           
                                </div> 
						
                        <!-- Page-header end -->
                        <div class="pcoded-inner-content">
                            <!-- Main-body start -->
                            <div class="main-body">
                                <div class="page-wrapper">
                                    <div class="page-body">
                                        <div class="row">
                                            <div class="col-md-12 col-lg-12">
                                                <div class="card">
                                                    <div class="card-header">
                                                        <h5>Dados da Fatura</h5>
                                                        <span>Valor da Fatura  </span>
                                                    </div>
                                                    <div class="card-block">
                                                        <form action="/fatura/pagar" method="post">
                                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                                            <input type="hidden" name="id_cartao" value="<%= fatura[0].id  %>" />
                                                            <div class="form-group row">
                                                                <div class="col-sm-6">
                                                                    <label>Banco</label>
                                                                    <input readonly type="text" class="form-control" name="cartao" 
                                                                    placeholder="Nome do banco" value="<%= fatura[0].banco %> ">
                                                                </div> 
                                                                <div class="col-sm-6">
                                                                    <label>Valor</label>
                                                                    <input readonly type="text" class="form-control" name="valor"  
                                                                    placeholder="Saldo na conta" value="<%= fatura[0].saldo %>">
                                                                </div> 
                                                            </div> 
                                                            <div class="form-group row">
                                                                <div class="col-sm-6">
                                                                    <label>Pagamento</label>
                                                                    <select class="form-control" name="tipo_pago" id="tipo_pago" required >
                                                                        <option selected disabled>Seleciona um tipo</option>                                                                 
                                                                        <% debito.forEach(element => { %>
                                                                            <option value="<%= element.id %>"><%= element.banco %></option> 
                                                                       <% }) %>                                                                                                                                          
                                                                       </select>
                                                                </div> 
                                                            </div>                                                
                                                            <button type="submit" class="btn waves-effect waves-light btn-primary btn-square">Pagar</button>
                                                        </form>
                                                    </div>





                                                 
                                                </div>
                                            </div>
                                         
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="styleSelector">

                            </div>
                        </div>
                                
                                
                              
                    </div>
                </div>
                <div id="styleSelector">
                
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../includes/footer') %>

</body>

</html>
