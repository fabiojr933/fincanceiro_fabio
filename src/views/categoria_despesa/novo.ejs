</div>
<!-- Pre-loader end -->
<div id="pcoded" class="pcoded">
    <div class="pcoded-overlay-box"></div>
    <div class="pcoded-container navbar-wrapper">

        <%- include('../includes/top') %>
    
        <div class="pcoded-main-container">
            <div class="pcoded-wrapper">

                <%- include('../includes/nav') %>


                <div class="pcoded-content">
                    <!-- Page-header start -->
                    <div class="page-header">
                        <div class="page-block">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <div class="page-header-title">
                                        <h5 class="m-b-10">Área Administrativa</h5>
                                        <p class="m-b-0">Seja bem vindo </p>
                                    </div>                                
                                </div> 
                                <div class="col-md-6">
                                    <%- include('../includes/messeges') %>
                                </div>                              
                            </div>
                        </div>
                    </div>

                    
                    <!-- Page-header end -->
                    <div class="pcoded-inner-content">
                        <div class="main-body">
                            <div class="page-wrapper">
                                <div class="page-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="card">
                                                <div class="card-header">
                                                    <div class="form-group row">
                                                        <div class="col-sm-10">
                                                         <h5>Cadastro de despesa</h5>     
                                                        </div>      
                                                        <div class="col-sm-2">
                                                         <a href="/categoria_despesa/index" type="submit" class="btn waves-effect waves-light btn-primary btn-square">Voltar</a>
                                                        </div>                                             
                                                     </div>
                                                    
                                                </div>
                                                <div class="card-block">
                                                    <form action="/categoria_despesa/salvar" method="post">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                                        <div class="form-group row">
                                                            <div class="col-sm-12">
                                                                <label>Nome</label>
                                                                <input type="text" class="form-control" name="categoria_despesa"
                                                                placeholder="Nome da categoria_despesa">
                                                            </div> 
                                                        </div>     
                                                        <button type="submit" class="btn waves-effect waves-light btn-primary btn-square">Salvar</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="styleSelector">
                
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../includes/footer') %>

</body>

</html>
